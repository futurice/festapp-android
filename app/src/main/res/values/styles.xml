<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="H1Text">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2Text">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MinorContentText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="EventListHeader">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="ttf_font">SegoeUILight</item>
    </style>

    <style name="ContentContainer">
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="MainMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/pressable_black</item>
        <item name="ttf_font">VerdanaBold</item>
    </style>

    <style name="AgendaFragment">
        <item name="android:background">@color/black</item>
    </style>

    <style name="AgendaDayButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/touchable_ui_height_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/agenda_day_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="ttf_font">SegoeUILight</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@drawable/agenda_day_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AgendaLocation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49.5dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="ttf_font">SegoeUILight</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

</resources>
