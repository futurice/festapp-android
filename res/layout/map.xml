<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">
    
    <com.futurice.festapp.ui.map.MapImageView android:id="@+id/image"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:scaleType="matrix" > <!-- Change it to "centerCrop" for Android 1.5 -->
    </com.futurice.festapp.ui.map.MapImageView>
    
	<RelativeLayout 
		android:layout_alignParentTop="true"
	    android:id="@+id/mapOverlays"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">	    
	</RelativeLayout>
    
    <include layout="@layout/map_lower_buttons"></include>
    
</RelativeLayout>
