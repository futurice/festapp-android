<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent" android:background="@android:color/transparent"
	android:layout_height="fill_parent" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:paddingTop="5dp">

	<TextView android:text="Date" android:id="@+id/newsDate" android:textSize="13sp"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:text="News headline" android:id="@+id/newsTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18sp" android:textStyle="bold" />

</LinearLayout>
