<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Header1">
        <item name="android:textColor">#C9960A</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="TimelineFont">
        <!--<item name="android:textColor">#00FF00</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <!-- Themes -->
	<style name="RuisrockTheme" parent="android:Theme.Light.NoTitleBar">
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowBackground">@drawable/background_plain</item>
	</style>
	<style name="RuisrockTheme.Fullscreen" parent="RuisrockTheme">
	    <item name="android:windowFullscreen">true</item>
	</style>
    
</resources>