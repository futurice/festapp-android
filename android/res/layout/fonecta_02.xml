<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/background_02"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	<LinearLayout android:orientation="vertical"
	  		android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/relativeLayout1">
	  		
		<TextView 
			android:id="@+id/title"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="34sp"
		    android:gravity="center_horizontal"
		    android:textStyle="bold"
		    android:layout_marginTop="15dip"
		    android:layout_marginBottom="30dip"
		    android:textColor="#ffffff"
		    android:text="@string/fonectaActivity.title" />
		
		<ImageView android:src="@drawable/ask_anything_bubbles"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/speechBubbles"
			android:adjustViewBounds="true"
			android:layout_marginLeft="4dip"
			android:layout_marginTop="4dip"
			android:scaleType="fitXY"
			/>
			
		<RelativeLayout
			android:gravity="center_horizontal"
			android:layout_marginTop="-30dip"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
			
			<ImageView android:src="@drawable/btn_call_02_glow"
				android:id="@+id/call02Glow"
				android:layout_marginLeft="20dip"
				android:layout_width="180dip" android:layout_height="167dip"></ImageView>
			
			<ImageView android:src="@drawable/btn_call_02"
				android:id="@+id/call02Button"
				android:layout_marginLeft="20dip"
				android:layout_width="180dip" android:layout_height="167dip"></ImageView>
		</RelativeLayout>
		
		<TextView  
			android:id="@+id/showPricesText"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="14sp"
		    android:gravity="center_horizontal"
		    android:layout_marginTop="20dip"
		    android:paddingTop="3dip"
		    android:paddingBottom="3dip"
		    android:textColor="#ffffff"
		    android:text="@string/fonectaActivity.showPrices.text" />
			
	</LinearLayout>
</ScrollView>