<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="@dimen/timeline.stageHeight"
	android:padding="1dip" android:layout_width="80dip" android:layout_marginLeft="0px"
	android:layout_marginBottom="@dimen/timeline.stageMarginBottom"
	android:tag="textContainer" android:background="@drawable/timeline_stage_bg">

	<TextView android:layout_width="wrap_content"
		android:tag="stageName"
		android:layout_height="fill_parent"
		android:gravity="center_vertical"
		android:paddingLeft="2dip"
		android:typeface="sans"
		android:textSize="13sp"
		android:ellipsize="marquee"
		android:textColor="#ffffff"
		android:text="stage" />

</RelativeLayout>