<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="64px"
	android:padding="1dip" android:layout_width="118px" android:layout_marginLeft="0px"
	android:layout_marginTop="9px" android:layout_marginBottom="9px"
	android:tag="textContainer" android:background="@drawable/timeline_stage_bg">

	<TextView android:layout_width="wrap_content"
		android:tag="stageName"
		android:layout_height="fill_parent"
