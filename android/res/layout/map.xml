<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000">
    
    <fi.ruisrock2011.android.ui.map.MapImageView android:id="@+id/image"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:scaleType="matrix" > <!-- Change it to "centerCrop" for Android 1.5 -->
    </fi.ruisrock2011.android.ui.map.MapImageView>
    
	<RelativeLayout 
		android:layout_alignParentTop="true"
	    android:id="@+id/mapOverlays"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
		<ImageView android:layout_width="wrap_content" android:src="@drawable/ic_maps_indicator_current_position_anim" android:id="@+id/currentPosition" android:layout_height="wrap_content"></ImageView>
	</RelativeLayout>
	
	    
	<TextView android:id="@+id/mapGpsStatusText"
		android:layout_alignParentTop="true"
		android:paddingTop="10dip"
		android:paddingBottom="10dip"
		android:textColor="#ffffff"
		android:gravity="center_horizontal"
		android:background="@drawable/artist_info_table_bg"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Etaisyys" />
    
    <include layout="@layout/map_lower_buttons"></include>
    
</RelativeLayout>
