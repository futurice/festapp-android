<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="66px"
	android:padding="1dip" android:layout_width="wrap_content" android:layout_marginLeft="0px"
	android:layout_marginTop="2px" android:layout_marginBottom="2px"
	>

	<ImageView android:id="@+id/starIcon"
		android:layout_width="32px"
		android:layout_height="32px"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/icon" />


	<!-- android:layout_toLeftOf="@id/icon"-->
	<!-- android:ellipsize="marquee" -->
	<TextView android:id="@+id/artistName" android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="1dip"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_toRightOf="@id/starIcon"
		
		android:textSize="10sp"
		android:textColor="#000000"
		android:text="Some band" />
		
