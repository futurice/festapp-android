
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    
		<TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/artistInfoTable">
			<TableRow
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:text="Lava" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<TextView android:text="Esiintymisaika" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				
				
			</TableRow>
			<TableRow
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/artistStage" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<TextView android:id="@+id/artistLiveTime" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<ToggleButton android:id="@+id/FollowAndCenterButton"
				        android:layout_width="30px"
				        android:layout_height="30px"
				        android:textOn="" android:textOff="" android:layout_alignParentLeft="true"
				        android:layout_marginLeft="5px"
				        android:layout_marginTop="5px" android:background="@drawable/icon"/>

				
			</TableRow>
			
			
			
		</TableLayout>
    
    
    </LinearLayout>
