<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="fi.ruisrock2011.android" android:versionCode="1"
	android:versionName="1.0" android:installLocation="preferExternal">

	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<!-- Splash and Main activities -->
		<activity android:name=".SplashActivity" android:theme="@style/RuisrockTheme.Fullscreen" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".RuisrockMainActivity" android:label="@string/app_name" android:theme="@style/RuisrockTheme">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		
		<!-- Rest of activities -->
		<!--android:screenOrientation="portrait"-->
		<activity android:name=".ArtistListActivity" android:label="@string/activity.label.Artists" android:theme="@style/RuisrockTheme" />
		<activity android:name=".ArtistInfoActivity" android:label="@string/activity.label.ArtistInfo" android:theme="@style/RuisrockTheme" />
		<activity android:name=".NewsListActivity" android:label="@string/activity.label.News" android:theme="@style/RuisrockTheme" />
		<activity android:name=".DebugActivity" android:label="@string/activity.label.Debug" android:theme="@style/RuisrockTheme" />
		<activity android:name=".ScheduleTabActivity" android:label="@string/activity.label.Schedule" android:theme="@style/RuisrockTheme" />
		<activity android:name=".TimelineActivity" android:label="@string/activity.label.Schedule" android:theme="@style/RuisrockTheme" />
		<activity android:name=".TestActivity" android:label="Test" android:theme="@style/RuisrockTheme" />
		<activity android:name=".MapActivity" android:label="@string/Map" android:theme="@style/RuisrockTheme" />
		
		<!-- Services -->
		<service android:enabled="true" android:name=".service.RuisrockService" />
		
	</application>
</manifest>
